{
  "name": "@poppinss/http-server",
  "version": "1.1.5",
  "description": "Extracted copy of AdonisJs HTTP server along with it's router",
  "main": "build/index.js",
  "files": [
    "build/src",
    "build/index.d.ts",
    "build/index.js"
  ],
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "lint": "tslint --project tsconfig.json",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile && typedoc --theme markdown --excludePrivate --mdHideSources && git add docs",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build"
  },
  "keywords": [
    "http",
    "http-server"
  ],
  "author": "virk,poppinss",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/fold": "^6.0.3",
    "@adonisjs/mrm-preset": "^2.0.3",
    "@poppinss/logger": "^1.1.0",
    "@types/node": "^12.0.3",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "del-cli": "^2.0.0",
    "doctoc": "^1.4.0",
    "husky": "^2.3.0",
    "japa": "^2.0.10",
    "mrm": "^1.2.2",
    "np": "^5.0.2",
    "proxy-addr": "^2.0.5",
    "ts-node": "^8.2.0",
    "tslint": "^5.16.0",
    "tslint-eslint-rules": "^5.4.0",
    "typedoc": "^0.14.2",
    "typedoc-plugin-external-module-name": "^2.1.0",
    "typedoc-plugin-markdown": "^2.0.8",
    "typescript": "^3.5.1"
  },
  "nyc": {
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "doctoc README.md --title='## Table of contents' && git add README.md",
      "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  },
  "peerDependencies": {
    "@poppinss/logger": "^1.x.x"
  },
  "dependencies": {
    "@poppinss/request": "^1.0.9",
    "@poppinss/response": "^1.0.8",
    "@poppinss/utils": "^1.0.3",
    "co-compose": "^5.1.1",
    "haye": "^2.0.2",
    "lodash": "^4.17.11",
    "macroable": "^2.0.2",
    "matchit": "git+https://github.com/thetutlage/matchit.git",
    "pluralize": "^8.0.0"
  }
}
